---
import "../styles/global.css";
import "../styles/breakpoints.css";

import Nav from "../components/Nav.astro";
import Grid from "../components/Grid.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  gradientColor?: string;
}

const { title, gradientColor = "#E4E4E2" } = Astro.props;

const black = `rgba(0,0,0,0.75)`;
const max = "max-width: 9999px";
const large = "max-width: 1920px";
const medium = "max-width: 1024px";
const small = "max-width: 700px";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <Grid>
      <slot />
    </Grid>
    <Footer />
  </body>
</html>
<style
  is:global
  define:vars={{ black, gradientColor, max, large, medium, small }}
>
  :root {
    --spacing-xl: 100px;
    --spacing-l: 64px;
    --spacing-m: 32px;
    --spacing-s: 16px;
    --spacing-xs: 8px;
    --gutter: 20px;
    --columns: 13;
    --col-width: calc(calc(100% / var(--columns))-var(--gutter) * 12);
  }
  html {
    color: var(--black);
    background: rgb(228, 228, 226);
  }

  body {
    padding: 16px 30px;
    min-height: 100vh;
    background: linear-gradient(
      0deg,
      var(--gradientColor) 0%,
      rgba(228, 228, 226, 1) 45%
    );
  }

  a {
    color: var(--black);
  }

  a:hover {
    color: #f64a92;
  }

  a:focus {
    color: #aa41cf;
  }
</style>
