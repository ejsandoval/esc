---
interface Props {
  label: string;
  href: string;
  isSelected: boolean;
}

const { label, href, isSelected } = Astro.props;
---

<button class:list={["button", { selected: isSelected }]}>
  <a href={href}>
    {label}
  </a>
</button>
<style>
  .button {
    display: block;
    height: 80px;
    width: 80px;
    border-radius: 5px;
    padding: 0;
    color: rgba(0, 0, 0, 75%);
    border: 1px solid rgba(0, 0, 0, 75%);
    background-color: #e4e4e2;
  }

  .button:hover,
  .button:focus,
  .selected {
    background-color: rgba(0, 0, 0, 90%);
    color: white;
  }

  .button a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: inherit;
    text-decoration: none;
    width: 100%;
    height: 100%;
  }
</style>
